{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"standard",
		"plugin:react/recommended",
		"plugin:promise/recommended",
		"plugin:flowtype/recommended",
		"plugin:jsdoc/recommended"
	],
	"parser": "babel-eslint",
	"plugins": [
		"babel",
		"eslint-plugin-local-rules",
		"sort-destructure-keys",
		"standard",
		"react",
		"promise",
		"flowtype",
		"sort-keys-fix"
	],
	"rules": {
		"one-var": ["error", "never"],
		"babel/semi": [2, "always"],
		"comma-dangle": ["error", "never"],
		"curly": 0,
		"flowtype/semi": 2,
		"flowtype/sort-keys": [2, "asc", {"caseSensitive": true, "natural": true}],
		"import/no-relative-parent-imports": 2,
		"indent": [0, "tab"],
		"jsdoc/newline-after-description": 0,
		"jsdoc/require-returns-description": 0,
		"no-param-reassign": 2,
		"no-tabs": 0,
		"operator-linebreak": ["error", "before"],
		"padding-line-between-statements": [
			"warn",
			{ "blankLine": "always", "prev": ["const", "let", "var"], "next": "*"},
			{ "blankLine": "any",    "prev": ["const", "let", "var"], "next": ["const", "let", "var"]},
			{ "blankLine": "any",    "prev": ["const", "let", "var"], "next": ["return"]},
			{ "blankLine": "always", "prev": "*", "next": "if" },
			{ "blankLine": "always", "prev": "if", "next": "*" }
		],
		"react/jsx-sort-props": 2,
		"react/jsx-tag-spacing": [2, {"beforeSelfClosing": "always"}],
		"require-atomic-updates": "off",
		"semi": [2, "always"],
		"sort-destructure-keys/sort-destructure-keys": [2, {"caseSensitive": true}],
		"sort-keys": [2, "asc", {"caseSensitive": true}],
		"sort-keys-fix/sort-keys-fix": "warn",
		"sort-vars": [2, {"ignoreCase": false}],
		"local-rules/sort-class-methods": "error",
		"local-rules/sort-imports": "error"
	},
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "detect",
			"flowVersion": "0.74"
		}
	}
}
